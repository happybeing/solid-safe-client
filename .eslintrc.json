{
  "extends": ["standard", "prettier", "plugin:jest/recommended"],
  "plugins": ["flowtype", "prettier", "react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "jsx": true
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "flowtype/define-flow-type": 2,
    "prettier/prettier": [
      "error",
      {
        "parser": "flow",
        "singleQuote": true,
        "bracketSpacing": true,
        "semi": false
      }
    ]
  }
}
